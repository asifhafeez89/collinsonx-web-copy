{
  "name": "@collinsonx/design-system",
  "version": "0.0.1",
  "repository": "https://github.com/CollinsonX/collinsonx-web.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ]
      }
    }
  },
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "rm -rf dist && pnpm build:swc && pnpm types",
    "build:swc": "pnpm copy-assets && swc src -d dist",
    "copy-assets": "npx mkdirp dist && cp -R src/assets dist/ && cp ./node_modules/@mantine/core/styles.css dist/assets/styles.css && cp ./node_modules/@mantine/dates/styles.css dist/assets/dates.styles.css",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf ./dist && rm -rf .turbo",
    "test": "jest --env=jsdom -u",
    "test:watch": "jest --env=jsdom --watchAll"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ]
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "peerDependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.5",
    "@mantine/core": "^5.10.4",
    "@mantine/dates": "^5.10.3",
    "@mantine/hooks": "^5.10.2",
    "@mantine/next": "^5.10.2",
    "dayjs": "^1.11.7",
    "next": "^13.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@babel/core": "^7.23.3",
    "@collinsonx/utils": "workspace:*",
    "@mantine/carousel": "^7.3.2",
    "@mantine/form": "^7.3.2",
    "@swc/helpers": "^0.5.3",
    "@tanstack/match-sorter-utils": "^8.8.4",
    "@tanstack/react-table": "^8.10.7",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "clsx": "^1.2.1",
    "embla-carousel-react": "^7.1.0",
    "react-auth-code-input": "^3.2.1",
    "react-select": "^5.8.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-typescript": "^7.23.3",
    "@emotion/jest": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mantine/colors-generator": "^7.3.2",
    "@mantine/core": "^7.3.2",
    "@mantine/dates": "^7.3.2",
    "@mantine/hooks": "^7.3.2",
    "@mantine/next": "^6.0.21",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.101",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.18.9",
    "@types/react": "^18.2.37",
    "@types/react-test-renderer": "^18.0.6",
    "chokidar": "^3.5.3",
    "chroma-js": "^2.4.2",
    "dayjs": "^1.11.10",
    "eslint": "^8.53.0",
    "eslint-config-collinsonx": "workspace:*",
    "eslint-config-mantine": "^3.1.0",
    "jest": "^29.7.0",
    "mkdirp": "^2.1.6",
    "next": "^13.5.6",
    "postcss": "^8.4.31",
    "postcss-modules": "^6.0.0",
    "postcss-preset-mantine": "^1.11.1",
    "postcss-simple-vars": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^16.0.2",
    "stylelint-config-standard-scss": "^12.0.0",
    "typescript": "4.9.5",
    "typescript-plugin-css-modules": "^5.0.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy",
      "^test-utils": "<rootDir>/src/test-utils/index",
      "^test-utils/(.*)$": "<rootDir>/src/test-utils/$1"
    },
    "snapshotSerializers": [
      "@emotion/jest/serializer"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/coverage/**",
      "!**/node_modules/**"
    ]
  }
}
