{
  "name": "@collinsonx/design-system",
  "version": "0.0.1",
  "repository": "https://github.com/CollinsonX/collinsonx-web.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ]
      }
    }
  },
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "rm -rf dist && pnpm build:swc && pnpm types",
    "build:swc": "pnpm copy-assets && swc src -d dist",
    "copy-assets": "npx mkdirp dist && cp -R src/assets dist/",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf ./dist && rm -rf .turbo",
    "test": "jest --env=jsdom",
    "test:watch": "jest --env=jsdom --watchAll"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ]
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "peerDependencies": {
    "dayjs": "^1.11.7",
    "next": "^13.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@babel/core": "^7.20.12",
    "@collinsonx/utils": "workspace:*",
    "@swc/helpers": "^0.4.12",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "clsx": "^1.1.1",
    "react-auth-code-input": "^3.2.1",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-typescript": "^7.16.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.28",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.0",
    "@types/react-test-renderer": "^18.0.0",
    "chokidar": "^3.5.3",
    "dayjs": "^1.11.7",
    "eslint": "^8.16.0",
    "eslint-config-collinsonx": "workspace:*",
    "jest": "^29.4.3",
    "mkdirp": "^2.1.3",
    "next": "^13.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "4.9.4"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "coveragePathIgnorePatterns": [
      "dist"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "coverage"
  }
}
