{
  "name": "@collinson/design-system",
  "version": "0.0.1",
  "repository": "https://github.com/CollinsonX/collinsonx-web.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ]
      }
    }
  },
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "rm -rf dist && pnpm build:swc && pnpm types",
    "build:swc": "pnpm copy-assets && swc src -d dist",
    "copy-assets": "npx mkdirp dist && cp -R src/assets dist/",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf ./dist && rm -rf .turbo"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ]
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "peerDependencies": {
    "next": "*",
    "react": "^17.0.0 || ^18.0.0-0",
    "react-dom": "^17.0.0 || ^18.0.0-0"
  },
  "dependencies": {
    "@emotion/styled": "^11.10.5",
    "@mantine/core": "^5.10.2",
    "@swc/helpers": "^0.4.12",
    "clsx": "^1.1.1",
    "react-auth-code-input": "^3.2.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.28",
    "@types/react": "latest",
    "chokidar": "^3.5.3",
    "eslint": "^8.16.0",
    "eslint-config-collinson": "workspace:*",
    "mkdirp": "^2.1.3",
    "typescript": "4.8.4"
  }
}
