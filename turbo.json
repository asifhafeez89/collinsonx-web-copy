{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "storybook-static/**"]
    },
    "main#dev": {
      "dependsOn": [
        "@collinsonx/utils#build",
        "@collinsonx/design-system#build"
      ]
    },
    "search#dev": {
      "dependsOn": [
        "@collinsonx/utils#build",
        "@collinsonx/design-system#build"
      ]
    },
    "lounge#dev": {
      "dependsOn": [
        "@collinsonx/utils#build",
        "@collinsonx/design-system#build"
      ]
    },
    "partner-management#dev": {
      "dependsOn": [
        "@collinsonx/utils#build",
        "@collinsonx/design-system#build"
      ]
    },
    "main#build": {
      "dependsOn": [
        "^build",
        "$SEARCH_URL",
        "$LOUNGE_URL",
        "$GRAPHQL_API_URL",
        "$NEXT_PUBLIC_GRAPHQL_API_URL"
      ],
      "outputs": [".next/**"]
    },
    "search#build": {
      "dependsOn": ["^build", "$LOUNGE_URL"],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
