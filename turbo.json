{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "storybook-static/**"]
    },
    "main#build": {
      "dependsOn": ["^build", "$SEARCH_URL", "$LOUNGE_URL"],
      "outputs": [".next/**"]
    },
    "@collinsonx/utils#build": {
      "dependsOn": ["$GRAPHQL_API_URL"],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
